def greet(name, greeting="Hello"):
    return f"{greeting}, {name}!"


name = input("Enter your name: ")

custom_greeting = input("Enter a custom greeting message (press Enter to use the default greeting): ")


if custom_greeting:
    message = greet(name, custom_greeting)
else:
    message = greet(name)


print(message)

